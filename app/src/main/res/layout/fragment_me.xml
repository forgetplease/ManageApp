<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".MainActivity">
    <!--设置-->
    <Button
        android:id="@+id/set"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="6dp"
        android:background="@mipmap/set" />
     <!--设置-->
    <Button
        android:id="@+id/email"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="6dp"
        android:background="@mipmap/email"/>
    <!--主页栏-->
    <LinearLayout
        android:id="@+id/mymain"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="28dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:text="点击登录"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/userPicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@mipmap/userp" />
    </LinearLayout>
    <!--账户-->

    <androidx.cardview.widget.CardView
        android:id="@+id/account"
        android:layout_width="328dp"
        android:layout_height="80dp"
        android:layout_below="@+id/mymain"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="28dp"
        app:cardCornerRadius="15dp">
            <!--设置点击事件用于跳转用户登录注册界面-->
        <TextView
            android:id="@+id/myAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="我的账户"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:text="152.34"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="45dp"
            android:text="账单、充值、自动缴费等" />
    </androidx.cardview.widget.CardView>
    <!--防疫信息管理-->
    <androidx.cardview.widget.CardView
        android:id="@+id/yiqingF"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/account"
        android:layout_marginRight="28dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防疫信息管理"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="12dp"
            android:textSize="18dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </androidx.cardview.widget.CardView>
    <!--服务-->
    <androidx.cardview.widget.CardView
        android:id="@+id/fuwu"
        android:layout_width="328dp"
        android:layout_height="200dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/yiqingF"
        android:layout_marginRight="28dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务记录"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="12dp"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二手信息"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="108dp"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="153dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址管理"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="156dp"
            android:textSize="18dp"/>
    </androidx.cardview.widget.CardView>
    <!--投诉与建议-->
    <androidx.cardview.widget.CardView
        android:id="@+id/tousu"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/fuwu"
        android:layout_marginRight="28dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉与建议"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="12dp"
            android:textSize="18dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>