<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/ML1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <!--定位+搜索框-->
        <RelativeLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/location"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:textColor="#F5F5F5" />
            <ImageView
                android:id="@+id/suosuop"
                android:layout_width="8.65dp"
                android:layout_height="8.65dp"
                android:layout_marginLeft="142dp"
                android:layout_marginRight="209dp"
                android:layout_marginTop="47dp"
                android:layout_marginBottom="337dp"/>
            <EditText
                android:id="@+id/sousuo"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="54dp"
                android:layout_marginBottom="327dp"
                android:background="@drawable/shape1"
                android:hint="搜索社区信息、疫情信息等"
                android:paddingLeft="44dp"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:textColor="#999999"
                android:textSize="10sp" />

            <Button
                android:id="@+id/saoyisao"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="319dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="24dp" />

            <ImageView
                android:id="@+id/gonggao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="42dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="217dp"
                android:background="@drawable/shape3"
                android:src="@mipmap/gonggao" />
            <!--首页防控疫情功能栏-->
            <RelativeLayout
                android:id="@+id/gongneng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="194dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="71dp"
                android:background="@drawable/shape1">
                <TextView
                    android:id="@+id/fyfk"
                    android:layout_width="55dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:text="防疫防控"
                    android:textColor="#000000"
                    android:textSize="13sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--出入登记-->
                    <LinearLayout
                        android:id="@+id/churudengji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/bt1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/chuxingd" />
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="14dp"
                            android:text="出入登记"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <!--核酸证明-->
                    <LinearLayout
                        android:id="@+id/hesuanzhengming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/bt2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/hesuan" />
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="14dp"
                            android:text="核酸证明"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <!--风险区域-->
                    <LinearLayout
                        android:id="@+id/fengxianquyu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/bt3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/fengxian" />
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="14dp"
                            android:text="风险区域"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <!--出行政策-->
                    <LinearLayout
                        android:id="@+id/chuxingzhengce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/bt4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/chuxingz" />
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="14dp"
                            android:text="出行政策"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <!--通知公告-->
            <TextView
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="172dp"
                android:layout_marginRight="3dp"
                android:text="通知公告 ："
                android:textColor="#1678FF"
                android:textSize="10sp" />
            <TextView
                android:layout_width="28dp"
                android:layout_height="20dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="336dp"
                android:text="社区"
                android:textColor="#333333"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
    <!--社区内的功能-->

    <RelativeLayout
        android:id="@+id/gongn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">

        <ImageButton
            android:id="@+id/bt5"
            android:layout_width="136dp"
            android:layout_height="167dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="374dp"
            android:layout_marginBottom="406dp"
            android:background="@mipmap/backg4" />

        <ImageButton
            android:id="@+id/bt6"
            android:layout_width="174dp"
            android:layout_height="74dp"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="374dp"
            android:background="@mipmap/backg3" />

        <ImageButton
            android:id="@+id/bt7"
            android:layout_width="70dp"
            android:layout_height="83dp"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="456dp"
            android:layout_marginRight="269dp"
            android:background="@mipmap/backg2" />

        <ImageButton
            android:id="@+id/bt8"
            android:layout_width="70dp"
            android:layout_height="83dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="456dp"
            android:layout_marginRight="269dp"
            android:background="@mipmap/backg1" />

    </RelativeLayout>

</RelativeLayout>